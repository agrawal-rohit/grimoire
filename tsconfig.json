{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"],
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "templates/**"]
}
