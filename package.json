{
  "version": "0.1.1",
  "name": "@agrawalrohit/create-lib",
  "description": "An opinionated CLI for scaffolding new JS/TS libraries with sensible configuration defaults and optional tooling integrations",
  "bin": "./bin/cli.js",
  "files": ["dist", "bin", "README.md", "LICENSE"],
  "author": "Rohit Agrawal <https://github.com/agrawal-rohit>",
  "repository": "https://github.com/agrawal-rohit/create-npm-library",
  "homepage": "https://github.com/agrawal-rohit/create-npm-library",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bugs": "https://github.com/agrawal-rohit/create-npm-library/issues",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "lint": "pnpm exec biome lint --write",
    "format": "pnpm exec biome format --write",
    "check": "pnpm exec biome check --write",
    "test:cov": "jest --coverage --passWithNoTests",
    "prepack": "pnpm run build",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "listr2": "^9.0.4",
    "@clack/prompts": "^0.11.0",
    "validate-npm-package-name": "6.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/validate-npm-package-name": "^4.0.2",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
