{
	"version": "0.0.0",
	"name": "grimoire",
	"description": "An opinionated book of spells for the modern developer",
	"bin": "./bin/cli.js",
	"files": [
		"dist",
		"bin",
		"README.md",
		"LICENSE"
	],
	"author": "Rohit Agrawal <https://github.com/agrawal-rohit>",
	"repository": "https://github.com/agrawal-rohit/grimoire",
	"homepage": "https://github.com/agrawal-rohit/grimoire#readme",
	"license": "MIT",
	"private": false,
	"bugs": "https://github.com/agrawal-rohit/grimoire/issues",
	"scripts": {
		"test": "vitest",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"lint": "pnpm exec biome lint --write",
		"format": "pnpm exec biome format --write",
		"check": "pnpm run typecheck && pnpm exec biome check --write",
		"check:ci": "pnpm run typecheck && pnpm exec biome lint",
		"cov": "vitest run --coverage --passWithNoTests",
		"prepack": "pnpm run build",
		"release": "semantic-release",
		"prepare": "husky"
	},
	"dependencies": {
		"cac": "^6.7.14",
		"chalk": "^5.6.2",
		"consola": "^3.2.3",
		"giget": "^1.2.5",
		"listr2": "^9.0.4",
		"log-update": "^7.0.1",
		"mustache": "^4.2.0",
		"spdx-license-list": "^6.10.0",
		"validate-npm-package-name": "6.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/jest": "^30.0.0",
		"@types/mustache": "^4.2.5",
		"@types/node": "^24.3.1",
		"@types/validate-npm-package-name": "^4.0.2",
		"@vitest/coverage-v8": "3.2.4",
		"husky": "^9.1.7",
		"jest": "^30.1.3",
		"lint-staged": "^16.1.6",
		"semantic-release": "^24.2.7",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
