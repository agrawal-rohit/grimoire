{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"root": true,
	"files": {
		"includes": [
			"src/**",
			"bin/**",
			"*.{js,ts,jsx,tsx,json,cjs,mjs,yaml,css}",
			"!src/templates"
		]
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
