{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"formatter": {
		"enabled": true,
		"includes": ["src/**", "bin/**", "*.{js,ts,jsx,tsx,json,cjs,mjs,yaml,css}"]
	},
	"linter": {
		"enabled": true,
		"rules": { "recommended": true },
		"includes": ["src/**", "bin/**", "*.{js,ts,jsx,tsx,json,cjs,mjs,yaml,css}"]
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
