{
  "name": "{{ name }}",
  "version": "0.0.0",
  "type": "module",
  "private": {{#public}}false{{/public}}{{^public}}true{{/public}},
  "packageManager": "{{ packageManagerVersion }}",
  {{#public}}
  "license": "MIT",
  "homepage": "https://github.com/{{ authorGitUsername }}/{{ name }}#readme",
  "bugs": "https://github.com/{{ authorGitUsername }}/{{ name }}/issues",
  "repository": "https://github.com/{{ authorGitUsername }}/{{ name }}",
  "author": "{{ authorName }} <{{ authorGitEmail }}>",
  {{/public}}
  "files": ["dist"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "cov": "vitest run --coverage --passWithNoTests",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm exec biome lint --write",
		"format": "pnpm exec biome format --write",
		"check": "pnpm run typecheck && pnpm exec biome check --write",{{#public}}\n"release": "semantic-release",{{/public}}
  },
  "devDependencies": {
		"husky": "^9.1.7",
    "tsdown": "^0.11.9",
    "@types/node": "^24.3.1",
    "@biomejs/biome": "2.2.3",
    "lint-staged": "^16.1.6",
    "@vitest/coverage-v8": "3.2.4",
		"semantic-release": "^24.2.7",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
  }
}
